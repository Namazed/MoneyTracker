<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_light">

    <include layout="@layout/toolbar"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:columnCount="2"
        android:rowCount="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="@string/sum_add_transaction"
            android:textSize="@dimen/tv_size_add_transaction_column0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:hint="300"
            android:textSize="@dimen/edit_text_size_add_transaction"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="@string/comments_add_transaction"
            android:textSize="@dimen/tv_size_add_transaction_column0"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill|center_vertical"
            android:hint="Война и мир"
            android:textSize="@dimen/edit_text_size_add_transaction"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="@string/category_add_transaction"
            android:textSize="@dimen/tv_size_add_transaction_column0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="Книги"
            android:textSize="@dimen/tv_size_add_transaction_column1"
            android:textColor="@color/primary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:gravity="center_vertical"
            android:text="@string/date_add_transaction"
            android:textSize="@dimen/tv_size_add_transaction_column0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:text="Сегодня"
            android:textSize="@dimen/tv_size_add_transaction_column1"
            android:textColor="@color/primary"/>

    </GridLayout>

</LinearLayout>